<html lang='en'>
	<head>
		<meta charset='UTF-8' />
		<meta http-equiv='X-UA-Compatible' content='IE=edge' />
		<meta name='viewport' content='width=device-width, initial-scale=1.0' />
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
		<link rel='stylesheet' type="text/css" href='./css/style.css' />
		<title>Dictionary App</title>
	</head>
	<body>
			<div class="w-100 m-auto h-100 d-flex align-items-center justify-content-center flex-column">
				{{>header}}
				<h2 class="mb-3 p-2">Search any word</h2>
				<div class="d-flex w-100 align-items-center justify-content-center flex-column mb-3">
					<input class="mb-2 form-control" placeholder="Enter word here..." type="text" id="txt-word">
					<button class="btn btn-primary" onclick="fetchWord()">Submit</button>
				</div>
				<div id="loading">
					<p>Fecthing 
						<span id="dot1" class="dot"></span>
						<span id="dot2" class="dot"></span>
						<span id="dot3" class="dot"></span>
					</p>
				</div>
				<div class="result">
					<h3 id="word" class="p-2"></h3>
					<h3 id="definition" class="p-2"></h3>
				</div>
				<script src="./js/app.js"></script>
			</div>
	</body>
</html>